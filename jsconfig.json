{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "checkJs": true,
    "baseUrl": ".", // This ensures paths are relative to the project root
    "paths": {
      "$lib/*": ["src/lib/*"], // Alias for the `src/lib` folder
      "$lib/components/*": ["src/lib/components/*"] // Alias for components in `src/lib/components`
    }
  },
  "include": ["src/**/*.d.ts", "src/**/*.js", "src/**/*.svelte"]
}
